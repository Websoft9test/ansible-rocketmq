[epel]
name=Extra Packages for Enterprise Linux {{ansible_distribution_version}} - $basearch
baseurl=http://download.fedoraproject.org/pub/epel/{{ansible_distribution_version}}/$basearch
#metalink=https://mirrors.fedoraproject.org/metalink?repo=epel-{{ansible_distribution_version}}&arch=$basearch
failovermethod=priority
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-{{ansible_distribution_version}}

[epel-debuginfo]
name=Extra Packages for Enterprise Linux {{ansible_distribution_version}} - $basearch - Debug
baseurl=http://download.fedoraproject.org/pub/epel/{{ansible_distribution_version}}/$basearch/debug
#metalink=https://mirrors.fedoraproject.org/metalink?repo=epel-debug-{{ansible_distribution_version}}&arch=$basearch
failovermethod=priority
enabled=0
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-{{ansible_distribution_version}}
gpgcheck=1

[epel-source]
name=Extra Packages for Enterprise Linux {{ansible_distribution_version}} - $basearch - Source
baseurl=http://download.fedoraproject.org/pub/epel/{{ansible_distribution_version}}/SRPMS
#metalink=https://mirrors.fedoraproject.org/metalink?repo=epel-source-{{ansible_distribution_version}}&arch=$basearch
failovermethod=priority
enabled=0
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-{{ansible_distribution_version}}
gpgcheck=1